{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
<div class="container">
    <h1>Productos</h1>
    <button id="productos-nuevo" class="btn btn-success">Nuevo producto</button>
    <a href="{{ path('producto_export') }}" class="btn btn-danger">Exportar a excel</a>

    <br><br>
    <table id="productos-table" class="table table-striped table-bordered" >
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th style="width:10%" >Clave</th>
                <th style="width:60%">Nombre</th>
                <th style="width:10%">Precio</th>
                <th style="width:20%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.claveProducto }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.precio }}</td>
                <td>
                <!--
                 -->
                    <a  class="edit btn btn-warning" href="#">Editar</a>
                    <a   class="delete btn btn-danger" href="#">Eliminar</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producto_new') }}">Create new</a>
</div>





<div class="modal fade" id="productos-modal" tabindex="-1" role="dialog" aria-labelledby="productos-modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ver/Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="productos-form">
                    <div class="row">
                      <div class="col">
                        <input id="clave" type="number" class="form-control" placeholder="Clave del producto" required>
                      </div>
                      <div class="col">
                        <input id="precio" type="number" class="form-control" placeholder="Precio">
                      </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col">
                            <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre del productos">
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="productos-guardar" type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>

        </div>
    </div>
</div>




{% endblock %}


{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('js/datatable.js') }}"></script>

<script src="{{ asset('js/bootstrap.js') }}"></script>

<script src="{{ asset('productos/productos.js') }}"></script>
{% endblock %}